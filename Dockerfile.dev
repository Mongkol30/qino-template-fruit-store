# ============================================
# Development Dockerfile with Hot Reload
# ============================================
FROM node:24-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Start dev server with host binding for container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
